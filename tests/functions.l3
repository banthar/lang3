
function recursive(a:Int,b:Int):Int {
	if( b == 0 ) {
		return a;
	} else {
		return recursive(a+1,b-1);
	}
}

function simple():Int {
	return 78;
}

var n:Int=42;

function incrementN():Void {
	n=n+1;
}

function main(argc:Int,argv:**Byte):Int{
	assert recursive(0,10) == 10;
	assert simple() == 78;
	assert n==42;
	incrementN();
	assert n==43;
	incrementN();
	assert n==44;
	return 0;
}


